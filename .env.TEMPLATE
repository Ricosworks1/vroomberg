# Vroomberg Environment Variables
# Copy this file to .env.local and fill in your actual API keys
# NEVER commit .env.local to Git!

# Octav API (get from data.octav.fi)
OCTAV_API_KEY=your_octav_api_key_here
NEXT_PUBLIC_OCTAV_API_URL=https://api.octav.fi

# Anthropic Claude API (get from console.anthropic.com)
# Using custom variable name to avoid conflicts with system ANTHROPIC_API_KEY
VROOMBERG_ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Hyperliquid (Arbitrum)
NEXT_PUBLIC_HYPERLIQUID_RPC=https://arb1.arbitrum.io/rpc
NEXT_PUBLIC_CHAIN_ID=42161

# GitHub (optional - for previous features)
GITHUB_REPO_OWNER=your_github_username
GITHUB_REPO_NAME=your_repo_name
